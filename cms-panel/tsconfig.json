{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "jsx": "react",
        "rootDir": "src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        // "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "baseUrl": "src"
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "exclude": [
        "target",
        "dist",
        "node_modules",
        "__tests__"
    ],
    "types": [
        "node",
        "webpack",
        "react",
        "react-dom",
        "reactstrap"
    ],
    "include": [
        "**/*.ts"
    ],
    "compileOnSave": true
}